<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="title-bar">
        <div class="container">
            <img src="/logo.png" alt="Logo" class="logo">
            <h1 class="site-title">MikuMiku</h1>
        </div>
    </div>
    <div class="container admin-container">
        <form action="/add-video" method="post" class="video-form">
            <input type="text" name="title" placeholder="Title" required>
            <input type="text" name="url" placeholder="YouTube URL" required>
            <textarea name="description" placeholder="Description" required></textarea>
            <button type="submit">Add Video</button>
        </form>
        <h2>Current Videos</h2>
        <div class="video-grid">
            <% videos.forEach((video, index) => { %>
                <div class="video-item">
                    <iframe width="560" height="315" src="<%= video.url %>" frameborder="0" allowfullscreen></iframe>
                    <h3><%= video.title %></h3>
                    <p><%= video.description %></p>
                    <form action="/delete-video" method="post">
                        <input type="hidden" name="index" value="<%= index %>">
                        <button type="submit" class="delete-button">Delete Video</button>
                    </form>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
